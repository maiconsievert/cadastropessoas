@{
    ViewBag.Title = "Pessoas";

    // @Html.Raw(CadastroPessoasWeb.Helper.MD5Helper.GetMd5HashData("sances"))
}


<main role="main" class="col-md-6">
    
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2 ">Login</h1>
        
    </div>

    
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        if (ViewBag.MsgErro != null)
        {
            <div class="alert alert-danger col-sm-8">@ViewBag.MsgErro</div>
        }

        <div class="form-group">
            <label for="login" class="control-label col-sm-2">Usuário</label>
            <div class="col-sm-8">
                <input id="login" name="login" type="text" class="form-control required" />
            </div>
        </div>

        <div class="form-group">
            <label for="senha" class="control-label col-sm-2">Senha</label>
            <div class="col-sm-8">
                <input id="senha" name="senha" type="password" class="form-control required" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Continuar" class="btn btn-primary" />
            </div>
        </div>
    }


</main>